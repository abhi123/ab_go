

<h1 align="center"> Facebook Wall </h1>
<div class="avatar">
    <fb:profile-pic uid="<%= @user.identifier%>" size="normal" facebook-logo="true" />	
</div>
<br><br><br>
<section class='dashboard'>
  <h2>Hello <%= @user.name %>!</h2><br>
  <article>
    <h3><%= link_to 'Profile Details', profile_facebooks_path %></h3>
    <p>User profile.</p>
  </article>
  <article>
    <h3><%= link_to 'Timeline (News Feed)', timeline_facebooks_path %></h3>
    <p>Show your timeline and update status.</p>
  </article>
  <article>
    <h3><%= link_to 'Canvas App', profile_facebooks_path %></h3>
    <p>This link let you go to fb_graph's sample canvas app on apps.facebook.com.</p>
  </article>
  <article>
    <h3><%= link_to 'Friends_list', friends_list_facebooks_path %></h3>
    <p>Shows your all friends list.</p>
    </article>
  <article>
    <h3><%= link_to 'My Facebook Album', profile_facebooks_path %></h3>
    <p>Shows your all friends list.</p>
    </article>
  <article>
    <h3><%= link_to 'App Request', '#', :id => :app_request %></h3>
    <p>Send application requests to your friends.</p>
    <p>This functionality is for iframe applications running on apps.facebook.com domain.</p>
  </article>
</nav>
<fb:add-profile-tab type="off-facebook"></fb:add-profile-tab>
<script>
$(function () {
  $('#app_request').click(function () {
    FB.ui({
      method: 'apprequests',
      message: 'You should learn more about this awesome game.',
      data: 'tracking information for the user'
    });
  });
});
</script>
