
<% if devise_error_messages!.present? %>
<div class="flash_notice">
	<%= devise_error_messages! %>
</div>
<% end %>
<br> <br>
<div class="register">
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :multipart => true }) do |f| %>
  
  <p><%= f.label :first_name %> :<br />
  <%= f.text_field :first_name %></p>

  <p><%= f.label :last_name %> :<br />
  <%= f.text_field :last_name %></p>

  <p><%= f.label :email %> :<br />
  <%= f.email_field :email %></p>

  <p><%= f.label :gender %> :<br />
  <p><%= f.radio_button(:gender, :value => "male") %> Male <br>
  <%= f.radio_button(:gender, :value => "female") %> Female</p></p>

  <p><%= f.label :dob %> :<br />
  <%= date_select("user", "dob", :start_year => 1980, :prompt => true) %></p>

  <p><%= f.label :photo %> :<br />
  <%= f.file_field :avatar %></p>

  <p><%= f.label :password %> :<br />
  <%= f.password_field :password %></p>

  <p><%= f.label :password_confirmation %> :<br />
  <%= f.password_field :password_confirmation %></p>

	<p> <%= recaptcha_tags %></p>

  <p><%= f.submit "Sign up" %> || <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %> || <%= link_to "sign in with google", user_omniauth_authorize_path(:open_id, :openid_url => "https://www.google.com/accounts/o8/id")%></p>
<% end %>
</div>

<br> <br>

<div class="shared_links">
<%= render :partial => "devise/shared/links" %>
</div>
